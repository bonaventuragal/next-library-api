// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(uuid())
    username String @unique
    name     String
    password String
    loans    Loan[]
}

model Book {
    id        String  @id @default(uuid())
    title     String
    author    String
    publisher String
    pages     Int
    stock     Int
    shelfId   String?
    shelf     Shelf?  @relation(fields: [shelfId], references: [id])
    genre     Genre[]
    loans     Loan[]
}

model Genre {
    id    String @id @default(uuid())
    name  String
    books Book[]
}

model Shelf {
    id       String @id @default(uuid())
    name     String
    capacity Int
    books    Book[]
}

model Loan {
    id         String    @id @default(uuid())
    createdAt  DateTime  @default(now())
    returnDate DateTime?
    userId     String
    user       User      @relation(fields: [userId], references: [id])
    books      Book[]
}
